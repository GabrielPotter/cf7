/* Ensure container fills the viewport */
#root, #huhu {
  height: 100vh;
  margin: 0;
}

/* PanelGroupâ€”the container of panels */
.react-resizable-panels {
  display: flex;
  height: 100vh;
}

/* Style resize handles */
.handle {
  background: #aaa;
  flex: 0 0 4px;
  cursor: col-resize;
}


/* Panel backgrounds for clarity */
.panel-left { background: #d0eaff; height: 100vh; }
.panel-mid { background: #142401; height: 100vh;}
.panel-right { background: #ffd0d0; height: 100vh; }

.parent {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

